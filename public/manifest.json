{
  "short_name": "Prayer Times",
  "name": "Prayer Times Chrome Extension",
  "description": "Chrome Extension shows prayer times with useful info",
  "version": "1.0.2",
  "manifest_version": 3,
  "action": {
    "default title": "Prayer Times",
    "default_icon": {
      "16": "favicon.ico",
      "128": "favicon.ico"
    }
  },

  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "favicon.ico",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "favicon.ico",
      "type": "image/png",
      "sizes": "512x512"
    }
  ]
}
